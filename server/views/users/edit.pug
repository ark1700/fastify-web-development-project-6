extends ../layouts/application.pug

block header
  = t('views.users.edit.edit')

block content
  +formFor()(action=route('updateUser', { id: currentUser.id.toString() }) method='post')
    input(type="hidden", name="_method", value="patch")
    +input(signInForm, 'firstName', errors)(type="text", value=currentUser.firstName)
    +input(signInForm, 'lastName', errors)(type="text", value=currentUser.lastName)
    +input(signInForm, 'email', errors)(type="email", value=currentUser.email)
    +input(signInForm, 'password', errors)(type="password", value=currentUser.password)
    +submit(signInForm)(value=t('views.users.edit.submit'))
